<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="1dp"
    android:paddingBottom="6dp"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    app:contentPaddingRight="5dp"
    app:contentPaddingLeft="5dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true"
    >

    <ImageView
        android:id="@+id/headImage"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_below="@+id/listTitleTxtView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:maxHeight="116dp"
        android:maxWidth="116dp" />
    <TextView
        android:id="@+id/listTitleTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="78dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:text="Service Problem"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:padding="3dp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="45dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/alertContent"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/test_alert_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/alertDate"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:padding="5dp"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingBottom="8dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/listLineTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Line"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:paddingBottom="8dp"/>

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/listTitleTxtView"
            android:layout_marginTop="3dp"
            android:maxHeight="116dp"
            android:maxWidth="116dp" />

        <TextView
            android:id="@+id/tagText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/test_alert_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:paddingBottom="8dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>